@{
    ViewData["Title"] = "Product Grid";
}

<div class="container my-5" ng-controller="productCtrl">
    <div class="row g-4">
        <!-- Loop through each product in the products array -->
        <div class="col-12 col-md-4" ng-repeat="product in products">
            <div class="card h-100 shadow-sm">
                <!-- Product Image Placeholder -->
                <img class="card-img-top" ng-src="{{product.image1}}" alt="{{product.productName}}" />

                <!-- Product Info -->
                <div class="card-body">
                    <h5 class="card-title" ng-bind="product.productName"></h5>
                    <p class="card-text text-muted" ng-bind="product.description"></p>

                    <!-- Product Details -->
                    <ul class="list-unstyled">
                        <li><strong>Price:</strong> $<span ng-bind="product.price"></span></li>
                        <li><strong>Color:</strong> <span ng-bind="product.color"></span></li>
                        <li><strong>Size:</strong> <span ng-bind="product.size"></span></li>
                        <li><strong>Weight:</strong> <span ng-bind="product.weight"></span> kg</li>
                        <li><strong>Stock:</strong> <span ng-bind="product.quantityInStock"></span> units available</li>
                        <li><strong>Manufacture Date:</strong> <span ng-bind="product.manufactureDate | date:'yyyy-MM-dd'"></span></li>
                    </ul>
                </div>

                <!-- Add to Cart Button -->
                <div class="card-footer text-center">
                    <button class="btn btn-primary w-100">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</div>
