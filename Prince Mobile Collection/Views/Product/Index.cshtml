@{
    ViewData["Title"] = "Products";
}

<div ng-controller="productCtrl">
    <h2>Products</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="product in products">
                <td>
                                    {{product}}
                </td>
                <td>
                    <button class="btn btn-primary" ng-click="getProduct(product.id)">Edit</button>
                    <button class="btn btn-danger" ng-click="deleteProduct(product.id)">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>

    <h3>Add/Edit Product</h3>
    <form ng-submit="insertProduct(product)">
        <div class="mb-3">
            <label for="productName" class="form-label">Name</label>
            <input type="text" class="form-control" id="productName" ng-model="product.name" required>
        </div>
        <div class="mb-3">
            <label for="productPrice" class="form-label">Price</label>
            <input type="number" class="form-control" id="productPrice" ng-model="product.price" required>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>
