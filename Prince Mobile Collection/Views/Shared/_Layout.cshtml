<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prince_Mobile_Collection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body ng-app="app">
    <header>
        <!-- Header Navbar -->
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/prince mobile logo.png" alt="Prince Mobile Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#loginSignupModal">Login/SignUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex mx-auto" role="search">
                        <input class="form-control me-2 rounded-pill bg-white" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light rounded-pill" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()
    @await Html.PartialAsync("/Views/Shared/Account/_LoginPartial.cshtml")



    <!-- Footer -->
    <footer class="bg-dark text-white mt-auto text-center pt-4 pb-3">
        <div class="container">
            <!-- Main Text -->
            <p class="mb-2">&copy; 2024 Mobile & Accessories. All rights reserved.</p>

            <!-- Links Section -->
            <div class="mb-3">
                <a href="#" class="text-white text-decoration-none me-4 hover-link">Privacy Policy</a>
                <a href="#" class="text-white text-decoration-none hover-link">Terms of Service</a>
            </div>

            <!-- Subtle Border Design -->
            <div class="border-top border-light pt-3">
                <p class="small">Designed by <a href="#" class="text-white text-decoration-none fw-bold">Prince Pali</a></p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/angularjs/angular.min.js"></script>
    <script src="~/js/app/app.js"></script>
    <script src="~/js/controller/productctrl.js"></script>
    <script src="~/js/controller/accountctrl.js"></script>
    <script src="~/js/services/productservice.js"></script>
    <script src="~/js/services/accountservice.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
